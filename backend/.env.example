# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/d2f_db?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-change-this"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-change-this"
JWT_REFRESH_EXPIRES_IN="30d"

# Encryption Configuration (三层加密架构)
MASTER_ENCRYPTION_KEY="your-256-bit-master-encryption-key-change-this"
ENCRYPTION_ALGORITHM="aes-256-gcm"

# Server Configuration
PORT=3001
NODE_ENV="development"
API_PREFIX="api"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging Configuration
LOG_LEVEL="info"

# BullMQ Configuration
BULL_REDIS_HOST="localhost"
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=""

# Douban Configuration
DOUBAN_BASE_URL="https://book.douban.com"
DOUBAN_USER_AGENT="Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"

# Feishu API Configuration
FEISHU_BASE_URL="https://open.feishu.cn"

# Security Headers
HELMET_ENABLED=true

# Health Check
HEALTH_CHECK_ENABLED=true