{
  "name": "d2f-backend",
  "version": "1.0.0",
  "description": "Douban to Feishu (D2F) Sync Assistant - Backend API",
  "author": "Claude Code",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.config.js",
    "test:integration": "jest --config ./jest-e2e.config.js --testPathPatterns=integration-tests",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset --force",
    "db:seed": "npx tsx prisma/seed.ts",
    "build:check": "tsc --noEmit",
    "dev:debug": "nest start --debug --watch",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "docker:build": "docker build -t d2f-backend .",
    "test:douban": "npx ts-node --transpile-only src/douban/standalone-test.ts",
    "test:douban-wish": "npx ts-node --transpile-only src/douban/wish-test.ts",
    "test:douban-movie": "npx ts-node --transpile-only src/douban/movie-test.ts",
    "test:douban-movie-opt": "npx ts-node --transpile-only src/douban/movie-optimized-test.ts",
    "test:douban-mock": "npx ts-node src/douban/mock-test.ts",
    "test:feishu": "npx ts-node --transpile-only src/feishu/test-feishu-integration.ts",
    "test:feishu-v2": "npx ts-node --transpile-only src/feishu/test-field-mapping-v2.ts",
    "fetch-douban": "npx ts-node --require tsconfig-paths/register src/fetch-douban-data-only.ts",
    "sync-from-cache": "npx ts-node --require tsconfig-paths/register src/sync-from-cache.ts",
    "fix-status-field": "npx ts-node --require tsconfig-paths/register src/fix-status-field.ts",
    "test-movie-complete": "npx ts-node --require tsconfig-paths/register src/test-movie-complete.ts",
    "test-book-rating": "npx ts-node --require tsconfig-paths/register src/test-book-rating.ts",
    "sync-movie-cache": "npx ts-node --require tsconfig-paths/register src/sync-movie-from-cache.ts",
    "docker:run": "docker run -p 3001:3001 --env-file .env d2f-backend"
  },
  "dependencies": {
    "@nestjs/bull": "^11.0.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^11.1.6",
    "@prisma/client": "^6.14.0",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "bullmq": "^5.58.0",
    "cheerio": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.14.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
